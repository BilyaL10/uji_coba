<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="dashboard-card">
                <div class="card-header">
                    <h3><i class="fas fa-exclamation-triangle text-danger"></i> <%= message %></h3>
                </div>
                <div class="card-body">
                    <% if (typeof error !== 'undefined' && error.status) { %>
                        <p class="text-danger">Status: <%= error.status %></p>
                    <% } %>
                    
                    <% if (typeof error !== 'undefined' && error.stack) { %>
                        <div class="alert alert-danger">
                            <pre><%= error.stack %></pre>
                        </div>
                    <% } %>
                    
                    <div class="text-center mt-4">
                        <a href="/" class="btn btn-primary"><i class="fas fa-home"></i> Kembali ke Halaman Utama</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 